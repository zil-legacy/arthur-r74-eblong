	SET	'S,1
	JUMP	?CND1
?CCL30:	GET	PTR,0
	EQUAL?	STACK,W?RUMPLESTILTSKIN \?CCL32
	SET	'S,2
	JUMP	?CND1
?CCL32:	GET	PTR,0
	EQUAL?	STACK,W?AMU,W?AMHTIR,W?SMOTUS \?CCL34
	SET	'S,3
	JUMP	?CND1
?CCL34:	GET	PTR,0
	EQUAL?	STACK,W?RIOTHAMUS \?CND1
	SET	'S,4
	JUMP	?CND1
?CCL5:	EQUAL?	OBJ,TH-MOTHER \?CCL37
	SET	'S,1
	JUMP	?CND1
?CCL37:	EQUAL?	OBJ,TH-RIOTHAMUS \?CCL39
	SET	'S,4
	JUMP	?CND1
?CCL39:	EQUAL?	PRSI,OBJ \?CCL42
	SET	'NP,PRSI-NP
	JUMP	?CND40
